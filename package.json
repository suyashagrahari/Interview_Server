{
  "name": "interview-server",
  "version": "1.0.0",
  "description": "Scalable Express.js backend for Interview Practice Platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "tts": "node generate-speech.js",
    "generate-speech": "node generate-speech.js",
    "test:audio": "node test-audio-generation.js",
    "cleanup:audio": "node cleanup-audio.js",
    "cleanup:audio:1h": "node cleanup-audio.js 1",
    "cleanup:audio:12h": "node cleanup-audio.js 12",
    "mongodb:start": "brew services start mongodb-community",
    "mongodb:stop": "brew services stop mongodb-community",
    "mongodb:restart": "brew services restart mongodb-community",
    "mongodb:status": "brew services list | grep mongodb-community",
    "setup": "cp env.example .env && npm install && npm run mongodb:start"
  },
  "keywords": [
    "express",
    "mongodb",
    "jwt",
    "authentication",
    "interview",
    "api"
  ],
  "author": "InterviewPro Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "google-auth-library": "^9.4.0",
    "gtts": "^0.2.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.10.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.1",
    "socket.io": "^4.8.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
